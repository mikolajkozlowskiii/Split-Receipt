@model Split_Receipt.Payload.UserGroupRequest

@{
    ViewData["Title"] = "CreateUserGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --fg-color: rgb(67, 68, 73);
        --fg-color--light: rgb(117, 118, 123);
        --bg-color: #35363a;
        --text: #FFF;
    }

    body {
        background-color: var(--bg-color);
    }

    .wrapper {
        display: block;
        background-color: var(--fg-color);
        padding: 25px;
        width: 350px;
    }

    h2, label {
        color: var(--text);
    }

    
</style>



<div class="wrapper">
<h2>Create a new group</h2>
    <form asp-controller="Group" asp-action="CreateUserGroup" method="post" style="">
        <div class="form-group">
            <label asp-for="GroupName" class="control-label"></label>
            <input style="width: 300px; margin-bottom: 5px"  asp-for="GroupName" class="form-control" placeholder="Group must have name" />
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>

        <div class="form-group" id="emails-container">
            <label asp-for="Emails" class="control-label">Emails</label>
            <div class="email-inputs">
                <input style="width: 300px" type="email" asp-for="Emails[0]" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Emails" class="text-danger"></span>
            </div>
            <button style="margin: 10px 0" type="button" class="btn" id="add-email">Add Email</button>
        </div>

        <button type="submit" class="btn">Submit</button>
    </form>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#add-email").click(function () {
                var index = $(".email-inputs input").length;
                var inputHtml = '<input style="width: 300px" type="email" name="Emails[' + index + ']" class="form-control" placeholder="Enter email" />';
                $(".email-inputs").append(inputHtml);
            });
        });
    </script>
}