@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --fg-color: rgb(67, 68, 73);
        --fg-color--light: rgb(117, 118, 123);
        --bg-color: #35363a;
        --text: #FFF;
    }

    body {
        background-color: var(--bg-color);
    }

    .wrapper {
        background-color: var(--fg-color);
    }
</style>

<div class="row justify-content-center">
    <div class="col-5 mt-5">
        <div class="card login-logout-card wrapper">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a style="color: var(--fg-color--light)" class="nav-link" href="/Identity/Account/Login">
                            Log in
                        </a>
                    </li>
                    <li class="nav-item">
                        <a style="color: var(--fg-color--light)"  class="nav-link" href="/Identity/Account/Register">
                            Register
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- !!!  -->

@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}