@using Split_Receipt.Payload
@using Microsoft.AspNetCore.Mvc.Rendering
@model Split_Receipt.Payload.CheckoutRequest

<h2>Checkout Request</h2>

<form method="post" asp-controller="Checkout" asp-action="SaveCheckout" asp-route-groupId="@ViewBag.groupId">
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Currency"></label>
        <select asp-for="Currency" class="form-control">
            <option value="PLN">PLN</option>
            <option value="EUR">EUR</option>
            <option value="USD">USD</option>
            <option value="GBP">GBP</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="IsSplitted"></label>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" asp-for="IsSplitted" value="True" /> Yes
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" asp-for="IsSplitted" value="False" /> No
            </label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
   
    <input type="hidden" name="groupId" value="@ViewBag.groupId" />
    <button type="submit" formaction="/Checkout/SaveCheckout/@ViewBag.GroupId">Wyślij</button>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>