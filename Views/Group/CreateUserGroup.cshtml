@model Split_Receipt.Payload.UserGroupRequest

@{
    ViewData["Title"] = "CreateUserGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new group</h2>

<form asp-controller="Group" asp-action="CreateUserGroup" method="post">
    <div class="form-group">
        <label asp-for="GroupName" class="control-label"></label>
        <input asp-for="GroupName" class="form-control" placeholder="Group must have name" />
    </div>

    <div class="form-group" id="emails-container">
        <label asp-for="Emails" class="control-label">Emails</label>
        <div class="email-inputs">
            <input type="email" asp-for="Emails[0]" class="form-control" placeholder="Enter email" />
        </div>
        <button type="button" class="btn btn-primary" id="add-email">Add Email</button>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#add-email").click(function () {
                var index = $(".email-inputs input").length;
                var inputHtml = '<input type="email" name="Emails[' + index + ']" class="form-control" placeholder="Enter email" />';
                $(".email-inputs").append(inputHtml);
            });
        });
    </script>
}