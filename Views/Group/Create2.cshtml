@model Split_Receipt.Payload.UserGroupRequest

@{
    ViewData["Title"] = "Create2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new group</h2>

<form asp-controller="Group" asp-action="Create2" method="post">
    <div class="form-group">
        <label asp-for="GroupName" class="control-label"></label>
        <input asp-for="GroupName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Emails" class="control-label"></label>
        <textarea asp-for="Emails" class="form-control"></textarea>
        <small class="form-text text-muted">Separate multiple emails with commas</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
